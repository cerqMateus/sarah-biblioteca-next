generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  matricula   Int    @id @default(autoincrement()) @unique 
  name        String
  sector      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  reservations Reservation[]
  notifications Notification[]
  ramal       String
}

model Room{
  id          Int      @id @default(autoincrement()) @unique
  name        String   @unique
  capacity    Int
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  resources   RoomResource[]
  reservations Reservation[]

  @@index([isAvailable])
}

model RoomResource {
  id        Int      @id @default(autoincrement()) @unique
  name      String
  type      String
  roomId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
}

model Reservation {
  id        Int      @id @default(autoincrement()) @unique
  userId    Int
  roomId    Int
  startDateTime DateTime
  endDateTime   DateTime
  status    ReservationStatus @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [matricula], onDelete: Cascade)
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  notifications Notification[]

  @@index([roomId, startDateTime, endDateTime])
  @@index([userId])
  @@index([startDateTime, endDateTime])
}

model Notification {
  id            Int              @id @default(autoincrement()) @unique
  userId        Int
  reservationId Int?
  title         String
  message       String
  type          NotificationType
  isRead        Boolean          @default(false)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  user          User             @relation(fields: [userId], references: [matricula], onDelete: Cascade)
  reservation   Reservation?     @relation(fields: [reservationId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([createdAt])
}

enum ReservationStatus {
  ACTIVE
  CANCELLED
  COMPLETED
}

enum NotificationType {
  RESERVATION_CREATED
  RESERVATION_CANCELLED
  RESERVATION_REMINDER_3_DAYS
  RESERVATION_REMINDER_1_DAY
  RESERVATION_COMPLETED
}


